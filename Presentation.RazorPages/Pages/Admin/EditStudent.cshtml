@page "{id:int}"
@model EditStudentModel
@{
    ViewData["Title"] = "Edytuj studenta";
}
<h2>Edytuj studenta</h2>
<form method="post">
    <div>
        <label>Imię:</label>
        <input asp-for="FirstName" />
    </div>
    <div>
        <label>Nazwisko:</label>
        <input asp-for="LastName" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <button type="submit">Zapisz zmiany</button>
</form>
<a asp-page="/Admin/Students">Powrót do listy</a> 