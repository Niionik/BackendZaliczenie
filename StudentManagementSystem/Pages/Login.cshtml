@page
@model StudentManagementSystem.Pages.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Logowanie</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="LoginRequest.Username" class="control-label">Nazwa użytkownika</label>
                        <input asp-for="LoginRequest.Username" class="form-control" />
                        <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LoginRequest.Password" class="control-label">Hasło</label>
                        <input asp-for="LoginRequest.Password" type="password" class="form-control" />
                        <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 