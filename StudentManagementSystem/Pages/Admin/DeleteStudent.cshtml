@page "{id:int}"
@model DeleteStudentModel
@{
    ViewData["Title"] = "Usuń studenta";
}
<h2>Usuń studenta</h2>
<p>Czy na pewno chcesz usunąć studenta: <strong>@Model.FirstName @Model.LastName</strong>?</p>
